" :source ~/_vimperatorrc
" set hm=firstletters,contains,transliterated"
set defsearch=google
set hintchars=wertuiopasdfjklnbmc



"autocmd LocationChange .* :js modes.passAllKeys = /mail\.google\.com|www\.google\.com\/reader\/view/.test(buffer.URL)

let mapleader = "\"

nnoremap x b
nnoremap <Leader>n n

" previous tab
nnoremap b gT
" next tab
nnoremap n gt
" previous page
nnoremap m <C-o>
" next page
nnoremap , <C-i>
" tab duplicate
nnoremap tn tabduplicate

" scroll faster
nnoremap h 2h
nnoremap j 8j
nnoremap k 8k
nnoremap l 2l

" Open link in background
nnoremap c F

"Restart the browser
nnoremap <C-r> :restart<CR>

